{# templates/components/equipment_table_empty.html.twig #}
<div class="alert alert-warning">
    <h5><i class="fas fa-exclamation-triangle"></i> {{ message|default('Aucun équipement trouvé') }}</h5>
    
    {% if filters is defined %}
        <p><strong>Filtres appliqués :</strong></p>
        <ul>
            {% if filters.annee %}
                <li>Année : {{ filters.annee }}</li>
            {% endif %}
            {% if filters.visite %}
                <li>Visite : {{ filters.visite }}</li>
            {% endif %}
        </ul>
    {% endif %}
    
    {% if total_equipements is defined and total_equipements > 0 %}
        <p class="mb-0">
            <small class="text-muted">
                {{ total_equipements }} équipement{{ total_equipements > 1 ? 's' : '' }} au total pour ce client
            </small>
        </p>
    {% endif %}
    
    <hr>
    <p class="mb-0">
        <strong>Suggestions :</strong>
        <ul class="mb-0">
            <li>Vérifiez que les filtres correspondent aux équipements existants</li>
            <li>Essayez de modifier l'année ou le type de visite</li>
            <li>Contactez le support si le problème persiste</li>
        </ul>
    </p>
</div>