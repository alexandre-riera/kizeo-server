{% extends 'base.html.twig' %}

{% block title %}Accès refusé{% endblock %}

{% block body %}
    <div class="error-page">
        <h1>Accès refusé</h1>
        
        <p>Vous n'avez pas les autorisations nécessaires pour accéder à cette page.</p>
        
        {% if not is_production %}
            {# Information supplémentaire uniquement en dev/test #}
            <div class="debug-info">
                <p>Contactez l'administrateur du site pour qu'il vous ajoute les autorisation d'accéder à cette page</p>
            </div>
        {% endif %}
        
        <p>
            <a href="{{ path('app_front') }}">Retour à l'accueil</a>
        </p>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .error-page {
            text-align: center;
            margin-top: 50px;
        }
        .error-page h1 {
            color: #d9534f;
        }
        .debug-info {
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            padding: 10px;
            margin-top: 20px;
        }
    </style>
{% endblock %}