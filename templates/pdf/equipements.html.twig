{# templates/pdf/equipements.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Rapport des équipements - Client {{ clientId }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            padding-top: 120px;
            margin: 0 !important;
        }
        
        .body-with-bg {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        
        /* STYLES POUR LA PREMIÈRE PAGE */
        .first-page {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .client-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #333;
            padding-bottom: 15px;
        }
        
        .client-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .client-info {
            font-size: 12px;
            color: #666;
        }
        
        /* DEBUG */
        .debug-info {
            background-color: #f0f8ff;
            border: 2px solid #0066cc;
            padding: 15px;
            margin: 10px 0;
            font-size: 10px;
        }
        
        /* STYLES POUR LES ÉQUIPEMENTS */
        .page-break {
            page-break-after: always;
        }
        
        .equipement {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.95);
        }
        
        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }
        
        .info-table th, .info-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        
        .info-table th {
            background-color: #f9f9f9;
            width: 30%;
            font-weight: bold;
        }
        
        .equipment-image {
            width: 30%;
            text-align: center;
            vertical-align: top;
            padding: 10px;
        }
        
        .main-photo {
            max-width: 250px;
            max-height: 200px;
            border: 2px solid #ddd;
            border-radius: 4px;
        }
        
        .no-image {
            width: 250px;
            height: 200px;
            border: 2px dashed #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            color: #6c757d;
            font-style: italic;
        }
        
        .section-title {
            background-color: #f5f5f5;
            padding: 10px;
            margin: 20px 0 10px 0;
            border-left: 5px solid #007bff;
            font-weight: bold;
            font-size: 14px;
        }
    </style>
</head>
<body {% if imageUrl is defined and imageUrl %}style="background-image: url('{{ imageUrl }}');" class="body-with-bg"{% endif %}>
    
    {# DEBUG VISUAL - Informations directement dans le PDF #}
    <div class="debug-info">
        <strong>DEBUG INFO:</strong><br>
        equipmentsWithPictures count: {{ equipmentsWithPictures|length }}<br>
        equipementsSupplementaires count: {{ equipementsSupplementaires|length|default(0) }}<br>
        total_equipements_bruts: {{ total_equipements_bruts|default('non défini') }}<br>
        total_equipements_filtres: {{ total_equipements_filtres|default('non défini') }}<br>
        Filtres - Année: "{{ clientAnneeFilter }}", Visite: "{{ clientVisiteFilter }}"<br>
        isFiltered: {{ isFiltered ? 'OUI' : 'NON' }}<br>
        {% if equipmentsWithPictures is not empty %}
            Premier équipement: {{ equipmentsWithPictures[0].equipment.numeroEquipement|default('N/A') }}
        {% endif %}
    </div>
    
    {# PREMIÈRE PAGE AVEC CARTOUCHE ET STATISTIQUES #}
    <div class="first-page">
        <div class="client-header">
            <h1 class="client-title">Rapport des équipements - Client {{ clientId }}</h1>
            {% if clientSelectedInformations %}
                <div class="client-info">
                    <strong>{{ clientSelectedInformations.nom|default('Client non trouvé') }}</strong><br>
                    {% if clientSelectedInformations.adresse %}{{ clientSelectedInformations.adresse }}<br>{% endif %}
                    {% if clientSelectedInformations.codePostal or clientSelectedInformations.ville %}
                        {{ clientSelectedInformations.codePostal|default('') }} {{ clientSelectedInformations.ville|default('') }}<br>
                    {% endif %}
                    {% if clientSelectedInformations.telephone %}Tél: {{ clientSelectedInformations.telephone }}<br>{% endif %}
                    {% if clientSelectedInformations.email %}Email: {{ clientSelectedInformations.email }}<br>{% endif %}
                </div>
                <hr style="margin: 10px 0;">
            {% endif %}
            <div class="client-info">
                Agence: {{ agence }} | Généré le {{ "now"|date_modify("+2 hours")|date('d/m/Y à H:i') }}
                {% if dateDeDerniererVisite is defined and dateDeDerniererVisite %}
                    <br>Dernière visite: {{ dateDeDerniererVisite|date('d/m/Y') }}
                {% endif %}
            </div>
        </div>
    </div>

    {# SAUT DE PAGE APRÈS LA PREMIÈRE PAGE #}
    <div class="page-break"></div>

    {# SECTION DES ÉQUIPEMENTS PRINCIPAUX - DEBUG MODE #}
    <h2 class="section-title">Équipements principaux ({{ equipmentsWithPictures|length }})</h2>
    
    {# DEBUG: Affichage même si vide #}
    {% if equipmentsWithPictures is defined %}
        {% if equipmentsWithPictures|length == 0 %}
            <div style="background-color: #ffe6e6; padding: 20px; border: 1px solid #ff0000; margin: 20px 0;">
                <h3 style="color: #cc0000;">DEBUG: Aucun équipement trouvé</h3>
                <p><strong>Total brut:</strong> {{ total_equipements_bruts|default('non défini') }}</p>
                <p><strong>Total filtré:</strong> {{ total_equipements_filtres|default('non défini') }}</p>
                <p><strong>Filtres actifs:</strong> {{ isFiltered ? 'OUI' : 'NON' }}</p>
                <p><strong>Filtre année:</strong> '{{ clientAnneeFilter }}'</p>
                <p><strong>Filtre visite:</strong> '{{ clientVisiteFilter }}'</p>
            </div>
        {% else %}
            {% for equipmentData in equipmentsWithPictures %}
                {% set equipment = equipmentData.equipment %}
                {% set pictures = equipmentData.pictures %}
                
                <div class="equipement">
                    <table class="info-table">
                        <tr>
                            <td rowspan="8" class="equipment-image">
                                {% if pictures|length > 0 %}
                                    <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="main-photo" alt="Photo équipement {{ equipment.numeroEquipement }}">
                                {% else %}
                                    <div class="no-image">
                                        Aucune photo disponible
                                    </div>
                                {% endif %}
                            </td>
                            <td style="width: 70%;">
                                <table style="width: 100%; border: none;">
                                    <tr>
                                        <th colspan="2" style="border: none; background: #f5f5f5; text-align: center; padding: 8px; font-size: 14px;">
                                            Équipement {{ equipment.numeroEquipement }} - {{ equipment.raisonSociale }}
                                            {% if equipment.etat == "A" %}
                                                <span style="color: green; float: right;">✓</span>
                                            {% elseif equipment.etat == "C" %}
                                                <span style="color: red; float: right;">✗</span>
                                            {% elseif equipment.etat == "Travaux urgent ou à l'arrêt" %}
                                                <span style="color: red; float: right;">⚠</span>
                                            {% endif %}
                                        </th>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Numéro</th>
                                        <td style="border: none;">{{ equipment.numeroEquipement }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Type</th>
                                        <td style="border: none;">{{ equipment.libelleEquipement|default('Non renseigné') }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Marque</th>
                                        <td style="border: none;">{{ equipment.marque|default('Non renseigné') }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Modèle</th>
                                        <td style="border: none;">{{ equipment.modele|default('Non renseigné') }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">État</th>
                                        <td style="border: none;">{{ equipment.etat|default('Non défini') }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Mise en service</th>
                                        <td style="border: none;">{{ equipment.dateEnregistrement ? equipment.dateEnregistrement|date('Y') : 'Année non présente sur équipement' }}</td>
                                    </tr>
                                    <tr>
                                        <th style="border: none; background: none;">Repère site client</th>
                                        <td style="border: none;">{{ equipment.repereSiteClient|default('Non repèré') }}</td>
                                    </tr>
                                    {# ANOMALIES #}
                                    {% if equipment.anomalies is defined and equipment.anomalies is not null and equipment.anomalies|trim is not empty %}
                                    <tr style="background-color: #fff3cd;">
                                        <th style="border: none; background: #fff3cd;">Anomalies</th>
                                        <td style="border: none; background: #fff3cd; color: #856404; font-weight: bold;">{{ equipment.anomalies }}</td>
                                    </tr>
                                    {% endif %}
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>

                {# Saut de page tous les 2 équipements #}
                {% if loop.index is divisible by(2) and not loop.last %}
                    <div class="page-break"></div>
                {% endif %}
            {% endfor %}
        {% endif %}
    {% else %}
        <div style="background-color: #ffe6e6; padding: 20px; border: 1px solid #ff0000;">
            <h3 style="color: #cc0000;">ERREUR: La variable equipmentsWithPictures n'est pas définie</h3>
        </div>
    {% endif %}

    {# PIED DE PAGE #}
    <div style="margin-top: 30px; font-size: 9px; color: #666; text-align: center; border-top: 1px solid #ddd; padding-top: 10px;">
        Document généré automatiquement le {{ "now"|date_modify("+2 hours")|date('d/m/Y à H:i') }} - 
        {{ equipmentsWithPictures|length }} équipement{{ equipmentsWithPictures|length > 1 ? 's' : '' }} traité{{ equipmentsWithPictures|length > 1 ? 's' : '' }}
    </div>
</body>
</html>