{# templates/pdf/equipements.html.twig - VERSION OPTIMISÉE MÉMOIRE #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Rapport des équipements - Client {{ clientId }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 11px;
            margin: 0;
            padding: 10px;
        }
        
        .equipement {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 10px;
            page-break-inside: avoid;
            min-height: 150px;
        }
        
        .equipment-row {
            display: table;
            width: 100%;
        }
        
        .equipment-image {
            display: table-cell;
            width: 150px;
            text-align: center;
            vertical-align: top;
            padding-right: 10px;
        }
        
        .equipment-info {
            display: table-cell;
            vertical-align: top;
        }
        
        .main-photo {
            max-width: 140px;
            max-height: 120px;
            border: 1px solid #ccc;
        }
        
        .no-image {
            width: 140px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            font-style: italic;
            color: #666;
        }
        
        .info-table {
            width: 100%;
        }
        
        .info-table th {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            padding: 3px;
            text-align: left;
            font-weight: bold;
            width: 25%;
            font-size: 10px;
        }
        
        .info-table td {
            border: 1px solid #ddd;
            padding: 3px;
            font-size: 10px;
        }
        
        .page-break {
            page-break-after: always;
        }
        
        .etat-ok { color: green; }
        .etat-urgent { color: red; }
        .etat-prevoir { color: orange; }
        
        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #333;
        }
        
        .memory-info {
            background-color: #e8f4fd;
            border: 1px solid #bee5eb;
            padding: 5px;
            margin-bottom: 10px;
            font-size: 9px;
        }
    </style>
</head>
<body>
    {# En-tête du document #}
    <div class="header">
        <h1 style="margin: 0; font-size: 16px;">Rapport des équipements - Client {{ clientId }}</h1>
        {% if clientSelectedInformations is defined %}
            <h2 style="margin: 5px 0; font-size: 14px;">{{ clientSelectedInformations.raisonSociale ?? 'Client' }}</h2>
            <p style="margin: 0;">{{ clientSelectedInformations.adresse ?? '' }}</p>
            <p style="margin: 0; font-size: 10px;">Agence: {{ agence }} | Généré le {{ "now"|date('d/m/Y à H:i') }}</p>
        {% endif %}
    </div>
    
    {# Information d'optimisation #}
    <div class="memory-info">
        <strong>Mode optimisé :</strong> Affichage des photos générales uniquement - 
        {{ total_equipements_traites ?? equipmentsWithPictures|length }} équipement(s) traité(s)
        {% if total_equipements_bruts is defined and total_equipements_bruts != (total_equipements_traites ?? equipmentsWithPictures|length) %}
            sur {{ total_equipements_bruts }} total(aux)
        {% endif %}
    </div>
    
    {# Section debug si aucun équipement #}
    {% if equipmentsWithPictures is not defined or equipmentsWithPictures|length == 0 %}
        <div style="background-color: #ffe6e6; padding: 15px; border: 1px solid #ff0000; margin: 10px 0;">
            <h3 style="color: #cc0000; margin: 0;">Aucun équipement trouvé</h3>
            <p style="margin: 5px 0;"><strong>Total brut:</strong> {{ total_equipements_bruts ?? 'non défini' }}</p>
            <p style="margin: 5px 0;"><strong>Total filtré:</strong> {{ total_equipements_filtres ?? 'non défini' }}</p>
            <p style="margin: 5px 0;"><strong>Filtres actifs:</strong> {{ isFiltered ? 'OUI' : 'NON' }}</p>
            <p style="margin: 5px 0;"><strong>Filtre année:</strong> '{{ clientAnneeFilter ?? '' }}'</p>
            <p style="margin: 5px 0;"><strong>Filtre visite:</strong> '{{ clientVisiteFilter ?? '' }}'</p>
        </div>
    {% else %}
        {# Section principale des équipements #}
        <div style="margin-bottom: 20px;">
            <h2 style="background-color: #f5f5f5; padding: 8px; margin-bottom: 15px; border-left: 5px solid #007bff; font-size: 14px;">
                Équipements ({{ equipmentsWithPictures|length }}) - Photos générales uniquement
            </h2>
            
            {% for equipmentData in equipmentsWithPictures %}
                {% set equipment = equipmentData.equipment %}
                {% set pictures = equipmentData.pictures %}
                
                <div class="equipement">
                    <div class="equipment-row">
                        <div class="equipment-image">
                            {# OPTIMISÉ: Une seule photo - traitement simple #}
                            {% if pictures|length > 0 and pictures[0] is defined and pictures[0].picture is defined %}
                                <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="main-photo" alt="Photo équipement {{ equipment.numeroEquipement }}">
                            {% else %}
                                <div class="no-image">
                                    Photo générale<br>non disponible
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="equipment-info">
                            <table class="info-table">
                                <tr>
                                    <th colspan="2" style="text-align: center; background-color: #e9ecef; padding: 5px; font-size: 11px;">
                                        <strong>{{ equipment.numeroEquipement }}</strong> - {{ equipment.raisonSociale }}
                                        {% if equipment.etat == "Rien à signaler le jour de la visite." %}
                                            <span class="etat-ok">✓</span>
                                        {% elseif equipment.etat in ["Travaux urgent ou à l'arrêt", "Travaux curatifs urgents"] %}
                                            <span class="etat-urgent">✗</span>
                                        {% elseif equipment.etat == "Travaux à prévoir" %}
                                            <span class="etat-prevoir">⚠</span>
                                        {% endif %}
                                    </th>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ equipment.libelleEquipement ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th>Marque</th>
                                    <td>{{ equipment.marque ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th>Modèle</th>
                                    <td>{{ equipment.modele ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th>État</th>
                                    <td>{{ equipment.etat ?? 'Non défini' }}</td>
                                </tr>
                                <tr>
                                    <th>Mise en service</th>
                                    <td>{{ equipment.dateEnregistrement ? equipment.dateEnregistrement|date('Y') : 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <th>Repère site client</th>
                                    <td>{{ equipment.repereSiteClient ?? 'Non repèré' }}</td>
                                </tr>
                                {# Anomalies si présentes #}
                                {% if equipment.anomalies is defined and equipment.anomalies is not null and equipment.anomalies|trim is not empty %}
                                <tr style="background-color: #fff3cd;">
                                    <th style="background-color: #fff3cd;">Anomalies</th>
                                    <td style="background-color: #fff3cd; color: #d9534f; font-weight: bold;">{{ equipment.anomalies }}</td>
                                </tr>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
                
                {# Saut de page tous les 3 équipements pour optimiser #}
                {% if loop.index is divisible by(3) and not loop.last %}
                    <div class="page-break"></div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
    
    {# Pied de page simplifié #}
    <div style="margin-top: 20px; font-size: 8px; color: #666; text-align: center; border-top: 1px solid #ddd; padding-top: 5px;">
        Document généré automatiquement le {{ "now"|date('d/m/Y à H:i') }} - 
        {{ equipmentsWithPictures|length }} équipements traités
        | Mode optimisé mémoire
    </div>
</body>
</html>