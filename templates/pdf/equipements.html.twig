{# templates/pdf/equipements.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Compte rendu d'entretien</title>
    <style>
        @page {
            margin: 0;
            size: A4;
        }
        
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            font-size: 12px;
            background-image: url('{{ imageUrl }}');
            background-size: contain;
            background-repeat: repeat;
            background-attachment: fixed;
            min-height: 90vh;
        }
        
        .page-content {
            margin: 100px 40px 60px 40px;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 5px;
        }
        
        /* PREMIÈRE PAGE */
        .first-page {
            page-break-after: always;
        }
        
        .header-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 30px;
            text-transform: uppercase;
        }
        
        .visit-info {
            margin-bottom: 20px;
        }
        
        .visit-info p {
            margin: 5px 0;
            font-size: 14px;
        }
        
        .client-info {
            margin-bottom: 30px;
        }
        
        .client-info h3 {
            color: #2c3e50;
            font-size: 16px;
            margin-bottom: 10px;
            text-transform: uppercase;
        }
        
        /* ÉQUIPEMENTS */
        .equipment-page {
            page-break-before: always;
            min-height: 100vh;
        }
        
        /* Table principale pour chaque équipement */
        .equipment-main-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            border: 2px solid #333;
        }
        
        /* Photo sur la gauche */
        .equipment-photo-cell {
            width: 220px;
            height: 220px;
            vertical-align: top;
            padding: 10px;
            border-right: 2px solid #333;
        }
        
        .equipment-photo {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border: 1px solid #ccc;
        }
        
        .no-photo {
            width: 200px;
            height: 200px;
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #ccc;
            color: #666;
            text-align: center;
            font-style: italic;
        }
        
        /* Cellule contenant la table des informations */
        .equipment-info-cell {
            vertical-align: top;
            padding: 0;
        }
        
        /* Table imbriquée des informations */
        .equipment-info-table {
            width: 100%;
            border-collapse: collapse;
            height: 220px;
        }
        
        /* En-tête avec nom de l'équipement et logo d'état */
        .equipment-header-row {
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
        }
        
        .equipment-title {
            font-weight: bold;
            font-size: 14px;
            padding: 10px;
            text-align: left;
            position: relative;
        }
        
        /* Logo d'état */
        .status-logo {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            border-radius: 50%;
        }
        
        .status-green { background-color: #28a745; }
        .status-orange { background-color: #fd7e14; }
        .status-red { background-color: #dc3545; }
        .status-grey { background-color: #6c757d; }
        
        /* Lignes d'informations */
        .info-row {
            border-bottom: 1px solid #eee;
        }
        
        .info-key {
            background-color: #f8f9fa;
            font-weight: bold;
            padding: 8px 10px;
            width: 35%;
            border-right: 1px solid #ddd;
            font-size: 11px;
        }
        
        .info-value {
            padding: 8px 10px;
            font-size: 11px;
        }
        
        .anomalies-row .info-value {
            color: #dc3545;
            font-weight: bold;
        }
        
        /* Saut de page */
        .page-break {
            page-break-before: always;
        }
        
        /* Footer */
        .footer {
            position: fixed;
            bottom: 20px;
            left: 40px;
            right: 40px;
            text-align: center;
            font-size: 10px;
            color: #666;
        }
    </style>
</head>
<body>
    {# PREMIÈRE PAGE - Informations générales #}
    {% if visit is defined %}
    <div class="first-page">
        <div class="page-content">
            <div class="header-title">Compte rendu d'entretien</div>
            
            <div class="visit-info">
                <p><strong>Visite :</strong> {{ visit.nom ?? 'Non renseigné' }}</p>
                <p><strong>Date de visite :</strong> {{ visit.dateVisite ? visit.dateVisite|date('d/m/Y') : 'Non renseignée' }}</p>
            </div>
            
            {% if client is defined %}
            <div class="client-info">
                <h3>{{ client.raisonSociale ?? 'Client non renseigné' }}</h3>
                {% if client.adresse %}
                    <p>{{ client.adresse }}</p>
                    <p>{{ client.codePostal }} {{ client.ville }}</p>
                {% endif %}
            </div>
            {% endif %}
            
            <div style="margin-top: 40px;">
                <h3>Résumé</h3>
                <p><strong>Nombre d'équipements au contrat :</strong> {{ summary.equipmentsContrat ?? 0 }}</p>
                <p><strong>Nombre d'équipements inexistants :</strong> {{ summary.equipmentsInexistants ?? 0 }}</p>
                <p><strong>Nombre d'équipements supplémentaires :</strong> {{ summary.equipmentsSupplementaires ?? 0 }}</p>
            </div>
        </div>
    </div>
    {% endif %}
    
    {# PAGES ÉQUIPEMENTS AU CONTRAT #}
    {% if equipmentsWithPictures is defined and equipmentsWithPictures|length > 0 %}
        {% set equipmentCount = 0 %}
        {% for equipmentData in equipmentsWithPictures %}
            {% set equipment = equipmentData.equipment %}
            {% set pictures = equipmentData.pictures %}
            {% set equipmentCount = equipmentCount + 1 %}
            
            {# Nouvelle page tous les 3 équipements #}
            {% if (equipmentCount - 1) % 3 == 0 %}
                {% if equipmentCount > 1 %}</div></div>{% endif %}
                <div class="equipment-page">
                    <div class="page-content">
            {% endif %}
            
            {# Table principale avec photo à gauche et infos à droite #}
            <table class="equipment-main-table">
                <tr>
                    {# Photo #}
                    <td class="equipment-photo-cell">
                        {% if pictures|length > 0 %}
                            <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="equipment-photo" alt="Photo équipement">
                        {% else %}
                            <div class="no-photo">
                                <em>Aucune photo<br>disponible</em>
                            </div>
                        {% endif %}
                    </td>
                    
                    {# Table imbriquée des informations #}
                    <td class="equipment-info-cell">
                        <table class="equipment-info-table">
                            {# En-tête avec titre et logo d'état #}
                            <tr class="equipment-header-row">
                                <td colspan="2" class="equipment-title">
                                    Équipement {{ equipment.numeroEquipement }} - {{ equipment.libelleEquipement ?? 'Type non renseigné' }}
                                    <div class="status-logo {% if equipment.etat %}
                                        {% if equipment.etat == "Rien à signaler le jour de la visite. Fonctionnement ok" or equipment.etat == "A" %}
                                            status-green
                                        {% elseif equipment.etat == "Travaux à prévoir" or equipment.etat == "B" %}
                                            status-orange
                                        {% elseif equipment.etat == "Travaux curatifs" or equipment.etat == "Equipement à l'arrêt le jour de la visite" or equipment.etat == "Equipement mis à l'arrêt lors de l'intervention" or equipment.etat == "C" or equipment.etat == "E" or equipment.etat == "F" %}
                                            status-red
                                        {% else %}
                                            status-grey
                                        {% endif %}
                                    {% endif %}"></div>
                                </td>
                            </tr>
                            
                            {# Numéro #}
                            <tr class="info-row">
                                <td class="info-key">Numéro</td>
                                <td class="info-value">{{ equipment.numeroEquipement }}</td>
                            </tr>
                            
                            {# Type #}
                            <tr class="info-row">
                                <td class="info-key">Type</td>
                                <td class="info-value">{{ equipment.libelleEquipement ?? 'Non renseigné' }}</td>
                            </tr>
                            
                            {# Marque #}
                            <tr class="info-row">
                                <td class="info-key">Marque</td>
                                <td class="info-value">{{ equipment.marque ?? 'Non renseigné' }}</td>
                            </tr>
                            
                            {# Modèle #}
                            <tr class="info-row">
                                <td class="info-key">Modèle</td>
                                <td class="info-value">{{ equipment.modele ?? 'Non renseigné' }}</td>
                            </tr>
                            
                            {# État #}
                            <tr class="info-row">
                                <td class="info-key">État</td>
                                <td class="info-value">
                                    {% if equipment.etat %}
                                        {% if equipment.etat == "Rien à signaler le jour de la visite. Fonctionnement ok" or equipment.etat == "A" %}
                                            Bon état
                                        {% elseif equipment.etat == "Travaux à prévoir" or equipment.etat == "B" %}
                                            Travaux à prévoir
                                        {% elseif equipment.etat == "Travaux curatifs" or equipment.etat == "Equipement à l'arrêt le jour de la visite" or equipment.etat == "Equipement mis à l'arrêt lors de l'intervention" or equipment.etat == "C" or equipment.etat == "E" or equipment.etat == "F" %}
                                            Travaux urgent ou à l'arrêt
                                        {% elseif equipment.etat == "Equipement non présent sur site" or equipment.etat == "G" %}
                                            Équipement non présent
                                        {% elseif equipment.etat == "Equipement inaccessible le jour de la visite" or equipment.etat == "D" %}
                                            Équipement inaccessible
                                        {% else %}
                                            {{ equipment.etat }}
                                        {% endif %}
                                    {% endif %}
                                </td>
                            </tr>
                            
                            {# Mise en service #}
                            <tr class="info-row">
                                <td class="info-key">Mise en service</td>
                                <td class="info-value">{{ equipment.miseEnService }}</td>
                            </tr>
                            
                            {# Repère site client #}
                            <tr class="info-row">
                                <td class="info-key">Repère site client</td>
                                <td class="info-value">{{ equipment.repereSiteClient }}</td>
                            </tr>
                            
                            {# Anomalies (seulement si présentes) #}
                            {% if equipment.anomalies|trim is not empty %}
                            <tr class="info-row anomalies-row">
                                <td class="info-key">Anomalies</td>
                                <td class="info-value">{{ equipment.anomalies }}</td>
                            </tr>
                            {% endif %}
                        </table>
                    </td>
                </tr>
            </table>
            
            {# Fermer la page si on a 3 équipements ou si c'est le dernier #}
            {% if equipmentCount % 3 == 0 or loop.last %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
    
    {# PAGES ÉQUIPEMENTS SUPPLÉMENTAIRES #}
    {% if equipementsSupplementaires|length > 0 %}
        {% set suppCount = 0 %}
        {% for equipmentData in equipementsSupplementaires %}
            {% set equipment = equipmentData.equipment %}
            {% set pictures = equipmentData.pictures %}
            {% set suppCount = suppCount + 1 %}
            
            {# Nouvelle page tous les 3 équipements #}
            {% if (suppCount - 1) % 3 == 0 %}
                {% if suppCount > 1 %}</div></div>{% endif %}
                <div class="equipment-page">
                    <div class="page-content">
            {% endif %}
            
            {# Table principale avec photo à gauche et infos à droite #}
            <table class="equipment-main-table">
                <tr>
                    {# Photo #}
                    <td class="equipment-photo-cell">
                        {% if pictures|length > 0 %}
                            <img src="data:image/jpeg;base64,{{ pictures[0].picture }}" class="equipment-photo" alt="Photo équipement">
                        {% else %}
                            <div class="no-photo">
                                <em>Aucune photo<br>disponible</em>
                            </div>
                        {% endif %}
                    </td>
                    
                    {# Table imbriquée des informations #}
                    <td class="equipment-info-cell">
                        <table class="equipment-info-table">
                            {# En-tête avec titre et logo d'état #}
                            <tr class="equipment-header-row">
                                <td colspan="2" class="equipment-title">
                                    Équipement {{ equipment.numeroEquipement }} - {{ equipment.libelleEquipement ?? 'Type non renseigné' }}
                                    <div class="status-logo {% if equipment.etat %}
                                        {% if equipment.etat == "Rien à signaler le jour de la visite. Fonctionnement ok" or equipment.etat == "A" %}
                                            status-green
                                        {% elseif equipment.etat == "Travaux à prévoir" or equipment.etat == "B" %}
                                            status-orange
                                        {% elseif equipment.etat == "Travaux curatifs" or equipment.etat == "Equipement à l'arrêt le jour de la visite" or equipment.etat == "Equipement mis à l'arrêt lors de l'intervention" or equipment.etat == "C" or equipment.etat == "E" or equipment.etat == "F" %}
                                            status-red
                                        {% else %}
                                            status-grey
                                        {% endif %}
                                    {% endif %}"></div>
                                </td>
                            </tr>
                            
                            {# Numéro #}
                            <tr class="info-row">
                                <td class="info-key">Numéro</td>
                                <td class="info-value">{{ equipment.numeroEquipement }}</td>
                            </tr>
                            
                            {# Type #}
                            <tr class="info-row">
                                <td class="info-key">Type</td>
                                <td class="info-value">{{ equipment.libelleEquipement ?? 'Non renseigné' }}</td>
                            </tr>
                            
                            {# Marque #}
                            <tr class="info-row">
                                <td class="info-key">Marque</td>
                                <td class="info-value">{{ equipment.marque ?? 'Non renseigné' }}</td>
                            </tr>
                            
                            {# Modèle #}
                            <tr class="info-row">
                                <td class="info-key">Modèle</td>
                                <td class="info-value">{{ equipment.modele ?? 'Non renseigné' }}</td>
                            </tr>
                            
                            {# État #}
                            <tr class="info-row">
                                <td class="info-key">État</td>
                                <td class="info-value">
                                    {% if equipment.etat %}
                                        {% if equipment.etat == "Rien à signaler le jour de la visite. Fonctionnement ok" or equipment.etat == "A" %}
                                            Bon état
                                        {% elseif equipment.etat == "Travaux à prévoir" or equipment.etat == "B" %}
                                            Travaux à prévoir
                                        {% elseif equipment.etat == "Travaux curatifs" or equipment.etat == "Equipement à l'arrêt le jour de la visite" or equipment.etat == "Equipement mis à l'arrêt lors de l'intervention" or equipment.etat == "C" or equipment.etat == "E" or equipment.etat == "F" %}
                                            Travaux urgent ou à l'arrêt
                                        {% elseif equipment.etat == "Equipement non présent sur site" or equipment.etat == "G" %}
                                            Équipement non présent
                                        {% elseif equipment.etat == "Equipement inaccessible le jour de la visite" or equipment.etat == "D" %}
                                            Équipement inaccessible
                                        {% else %}
                                            {{ equipment.etat }}
                                        {% endif %}
                                    {% endif %}
                                </td>
                            </tr>
                            
                            {# Mise en service #}
                            <tr class="info-row">
                                <td class="info-key">Mise en service</td>
                                <td class="info-value">{{ equipment.dateEnregistrement|date('Y')}}</td>
                            </tr>
                            
                            {# Repère site client #}
                            <tr class="info-row">
                                <td class="info-key">Repère site client</td>
                                <td class="info-value">{{ equipment.repereSiteClient}}</td>
                            </tr>
                            
                            {# Anomalies (seulement si présentes) #}
                            {% if equipment.anomalies|trim is not empty %}
                            <tr class="info-row anomalies-row">
                                <td class="info-key">Anomalies</td>
                                <td class="info-value">{{ equipment.anomalies }}</td>
                            </tr>
                            {% endif %}
                        </table>
                    </td>
                </tr>
            </table>
            
            {# Fermer la page si on a 3 équipements ou si c'est le dernier #}
            {% if suppCount % 3 == 0 or loop.last %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
</body>
</html>